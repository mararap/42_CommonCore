SRC := pipex.c \
		cleanUp.c \
		endPipex.c \
		initStruct.c \
		inputCheck.c \
		pipex_utils.c
		
NAME := pipex
CC := cc
CFLAGS := -Wall -Wextra -Werror -I Libft/include

OBJ := $(SRC:.c=.o)

LIBFT_DIR := Libft
LIBFT := $(LIBFT_DIR)/libft.a

all: $(LIBFT) $(NAME)

$(LIBFT):
	@$(MAKE) -C $(LIBFT_DIR)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) $(LIBFT) -o $(NAME)

clean:
	@rm -f $(OBJ)
	@$(MAKE) -C $(LIBFT_DIR) clean

fclean: clean
	@rm -f $(NAME)
	@$(MAKE) -C $(LIBFT_DIR) fclean

re: fclean all

.PHONY: all clean fclean re

